    </box>
    <box id="east" size="9.95,0.05,0.1" movable="false">
      <body position="0.025,-4.975,0"  orientation="0,0,0" />
    </box>
    <box id="south" size="0.05,9.95,0.1" movable="false">
      <body position="-4.975,-0.025,0"  orientation="0,0,0" />
    </box>
    <box id="west" size="9.95,0.05,0.1" movable="false">
      <body position="-0.025,4.975,0"  orientation="0,0,0" />
    </box>
	-->

    <!-- add drones -->
    <drone id="drone1">
      <body position="0,0,0" orientation="0,0,0"/>
      <controller config="drone"/>
    </drone>

    <drone id="drone2">
      <body position="-1.0,0,0" orientation="0,0,0"/>
      <controller config="drone"/>
    </drone>

    <drone id="drone3">
      <body position="-0.5,0.5,0" orientation="0,0,0"/>
      <controller config="drone"/>
    </drone>

    <drone id="drone4">
      <body position="-1.5,-0.5,0" orientation="0,0,0"/>
      <controller config="drone"/>
    </drone>

    <drone id="drone5">
      <body position="-2.0,0,0" orientation="0,0,0"/>
      <controller config="drone"/>
    </drone>

    <drone id="drone6">
      <body position="-2.5,0.5,0" orientation="0,0,0"/>
      <controller config="drone"/>
    </drone>

    <pipuck id="pipuck1">
       <body position="0.5,-0.0,0" orientation="0,0,0"/>
       <controller config="pipuck"/>
    </pipuck>
    <pipuck id="pipuck2">
       <body position="0.5,0.5,0" orientation="0,0,0"/>
       <controller config="pipuck"/>
    </pipuck>
    <pipuck id="pipuck3">
       <body position="-0.3,-0.7,0" orientation="0,0,0"/>
       <controller config="pipuck"/>
    </pipuck>
    <pipuck id="pipuck4">
       <body position="-0.5,-0.5,0" orientation="0,0,0"/>
       <controller config="pipuck"/>
    </pipuck>
    <pipuck id="pipuck5">
       <body position="-0.5,0.0,0" orientation="0,0,0"/>
       <controller config="pipuck"/>
    </pipuck>
    <pipuck id="pipuck6">
       <body position="-0.5,0.7,0" orientation="0,0,0"/>
       <controller config="pipuck"/>
    </pipuck>
    <pipuck id="pipuck7">
       <body position="-1.5,-0.7,0" orientation="0,0,0"/>
       <controller config="pipuck"/>
    </pipuck>
    <pipuck id="pipuck8">
       <body position="-1.5,-0.3,0" orientation="0,0,0"/>
       <controller config="pipuck"/>
    </pipuck>
    <pipuck id="pipuck9">
       <body position="-1.5,0.0,0" orientation="0,0,0"/>
       <controller config="pipuck"/>
    </pipuck>
    <pipuck id="pipuck10">
       <body position="-1.5,0.7,0" orientation="0,0,0"/>
       <controller config="pipuck"/>
    </pipuck>
    <pipuck id="pipuck11">
       <body position="-2.0,-0.0,0" orientation="0,0,0"/>
       <controller config="pipuck"/>
    </pipuck>
    <pipuck id="pipuck12">
       <body position="-2.0,0.3,0" orientation="0,0,0"/>
       <controller config="pipuck"/>
    </pipuck>
    <pipuck id="pipuck13">
       <body position="-2.5,-0.0,0" orientation="0,0,0"/>
       <controller config="pipuck"/>
    </pipuck>
    <pipuck id="pipuck14">
       <body position="-2.5,0.3,0" orientation="0,0,0"/>
       <controller config="pipuck"/>
    </pipuck>
  </arena>

  <!-- ******************* -->
  <!-- * Physics engines * -->
  <!-- ******************* -->
  <physics_engines>
    <pointmass3d id="pm3d" iterations="10" />
    <dynamics3d id="dyn3d" iterations="25" default_friction="0.3">
      <gravity g="9.8" />
      <floor friction="0.3" />
      <virtual_magnetism />
    </dynamics3d>
  </physics_engines>

  <!-- ********* -->
  <!-- * Media * -->
  <!-- ********* -->
  <media>
    <directional_led id="directional_leds" index="grid" grid_size="20,20,20"/>
    <led id="leds" index="grid" grid_size="20,20,20" />
    <tag id="tags" index="grid" grid_size="20,20,20" />
    <radio id="nfc" index="grid" grid_size="20,20,20" />
    <radio id="wifi" index="grid" grid_size="20,20,20" />
  </media>

