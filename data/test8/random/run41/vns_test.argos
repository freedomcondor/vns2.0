<?xml version="1.0" ?>
<argos-configuration>

  <!-- ************************* -->
  <!-- * General configuration * -->
  <!-- ************************* -->
  <framework>
    <system threads="0"/>
    <experiment length="500" ticks_per_second="5" random_seed="41" />
  </framework>
  
  <!-- *************** -->
  <!-- * Controllers * -->
  <!-- *************** -->
  <controllers>
     <!-- Pi-Puck Controller -->
    <lua_controller id="pipuck">
      <actuators>
        <debug implementation="default">
          <interface id="draw" />
          <interface id="loop_functions" />
        </debug>
        <pipuck_differential_drive implementation="default" />
        <wifi implementation="default" />
      </actuators>
      <sensors>
        <pipuck_differential_drive implementation="default" />
        <pipuck_rangefinders implementation="default" show_rays="false" />
        <wifi implementation="default" show_rays="false" />
      </sensors>
      <params script="data/test8/pipuck.lua" />
    </lua_controller>
     <!-- Drone Controller -->
    <lua_controller id="drone">
      <actuators>
        <directional_leds implementation="default" />
        <debug implementation="default">
          <interface id="draw" />
          <interface id="loop_functions" />
        </debug>
        <drone_flight_system implementation="default" />
        <wifi implementation="default" />
      </actuators>
      <sensors>
        <drone_cameras_system implementation="default" show_frustum="false" show_tag_rays="false" show_led_rays="false"/>
        <drone_flight_system implementation="default" />
        <wifi implementation="default" />
      </sensors>
      <params script="data/test8/drone.lua" />
    </lua_controller>

	<!-- Block Controller -->
    <lua_controller id="block">
      <actuators>
        <directional_leds implementation="default" />
        <radios implementation="default"/>
      </actuators>
      <sensors>
        <radios implementation="default" show_rays="true"/>
      </sensors>
      <params script="data/test8/block.lua" />
    </lua_controller>
  </controllers>

  <!-- ****************** -->
  <!-- * Loop functions * -->
  <!-- ****************** -->
  <loop_functions library="../argos3-vns2/build/loop_functions/libvns_loop_functions"
                  label="vns_loop_functions"/>

  <!-- *********************** -->
  <!-- * Arena configuration * -->
  <!-- *********************** -->
  <arena size="10, 10, 2.5" center="0, 0, 1">
    <floor id="floor" source="loop_functions" pixels_per_meter="1" />
    <!-- add the arena walls -->
    <box id="north" size="0.05,9.95,0.1" movable="false">
      <body position="4.975,0.025,0"  orientation="0,0,0" />
    </box>
    <box id="east" size="9.95,0.05,0.1" movable="false">
      <body position="0.025,-4.975,0"  orientation="0,0,0" />
    </box>
    <box id="south" size="0.05,9.95,0.1" movable="false">
      <body position="-4.975,-0.025,0"  orientation="0,0,0" />
    </box>
    <box id="west" size="9.95,0.05,0.1" movable="false">
      <body position="-0.025,4.975,0"  orientation="0,0,0" />
    </box>

    <!-- add drones -->
    <distribute>
      <position method="uniform" min="0,-0.5,0" max="1.0,0.5,0" />
      <orientation method="uniform" min="0,0,0" max="0,0,0" />
      <entity quantity="3" base_num="1" max_trials="100">

        <drone id="drone">
          <body position="-1,1,0" orientation="0,0,0"/>
          <controller config="drone"/>
        </drone>

      </entity>
    </distribute>

    <!-- add pi-puck robots -->
    <distribute>
      <position method="uniform" min="0,-0.5,0" max="1.0,0.5,0" />
      <orientation method="uniform" min="0,0,0" max="360,0,0" />
      <entity quantity="4" base_num="1" max_trials="100">
        <pipuck id="pipuck">
          <controller config="pipuck"/>
        </pipuck>
      </entity>
    </distribute>
  </arena>

  <!-- ******************* -->
  <!-- * Physics engines * -->
  <!-- ******************* -->
  <physics_engines>
    <pointmass3d id="pm3d" iterations="10" />
    <dynamics3d id="dyn3d" iterations="25" default_friction="0.3">
      <gravity g="9.8" />
      <floor friction="0.3" />
      <virtual_magnetism />
    </dynamics3d>
  </physics_engines>

  <!-- ********* -->
  <!-- * Media * -->
  <!-- ********* -->
  <media>
    <directional_led id="directional_leds" index="grid" grid_size="20,20,20"/>
    <led id="leds" index="grid" grid_size="20,20,20" />
    <tag id="tags" index="grid" grid_size="20,20,20" />
    <radio id="nfc" index="grid" grid_size="20,20,20" />
    <radio id="wifi" index="grid" grid_size="20,20,20" />
  </media>

